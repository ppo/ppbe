---
import BaseHead from '@/components/head/BaseHead.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';
import GoogleAnalytics from '@/components/services/GoogleAnalytics.astro';


interface Props {
  title?: string | null;
  description?: string | null;
  image?: string | URL | null;
  meta?: object[];
}

const {
  title,
  description,
  image,
  meta,
} = Astro.props.frontmatter || Astro.props;  // `.md[x]` provide a `frontmatter` prop.
---


<html lang="en" class="h-full">
  <head>
    <BaseHead {...{title, description, image, meta}} />
  </head>
  <body class="h-full">
    <div class="min-h-full flex flex-col">
      <Header class="flex-none mb-2" />
      <main class="prose flex-1 p-2">
        <slot />
      </main>
      <Footer class="flex-none mt-4 text-center" />
    </div>

    <GoogleAnalytics />
  </body>
</html>
