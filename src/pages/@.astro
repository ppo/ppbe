---
import { LINK_PAGE_NAV, SITE_NAME } from '@/settings.mjs';

import IconLink from '@/components/IconLink.astro';
import BaseHead from '@/components/head/BaseHead.astro';
import GoogleAnalytics from '@/components/services/GoogleAnalytics.astro';


const linksProps = {
  size: 24,
  target: '_blank',
  rel: 'noopener noreferrer',
  class: 'hover:text-primary',
};
---


<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="min-h-screen">
    <main class="min-h-screen flex flex-col justify-center items-center px-4 py-8">
      <h1 class="text-2xl mb-12">{SITE_NAME}</h1>
      <nav>
        <ul class="flex flex-col gap-4 text-lg">
          {LINK_PAGE_NAV.map((item) => (
            <li>
              {item && (
                item.icon
                  ? (<IconLink {...{...item, ...linksProps}} />)
                  : (<a href={item.url}>{item.label}</a>)
              ) || (
                <></>
              )}
            </li>
          ))}
        </ul>
      </nav>
    </main>

    <GoogleAnalytics />

    <style is:global>
      /* Improve Page speed: https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
