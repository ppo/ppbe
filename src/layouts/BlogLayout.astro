---
import Layout from '@/layouts/MainLayout.astro';


interface Props {
  title?: string | null;
  description?: string | null;
  image?: string | URL | null;
  meta?: object[];
  frontmatter?: object[];
}

const {
  title,
  image,
  meta,
  frontmatter,
} = Astro.props;  // `.md[x]` provide a `frontmatter` prop.
const description = frontmatter?.data.abstract || Astro.props.description;
---


<Layout title={[title, "Blog"]} {...{description, image, meta}}>
  <slot />
</Layout>
